{
  "name": "smarthomebuddy",
  "productName": "SmartHomeBuddy",
  "version": "0.0.0",
  "description": "Identify vulnerabilities in your network from IoT devices.",
  "main": ".webpack/main",
  "scripts": {
    "start": "DEV_MODE=true electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "lint": "eslint --ext .ts,.tsx ."
  },
  "keywords": [],
  "author": {
    "name": "Tobias Becher and Johannes Jestram",
    "email": ""
  },
  "license": "GPLv3",
  "config": {
    "forge": {
      "packagerConfig": {
        "appCopyright": "GPLv3",
        "extraResource": "../device-identifier/dist/cli"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "description": "Identify vulnerabilities in your network from IoT devices.",
            "iconURL": "media/app-icons/icon.ico"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {
            "bin": "SmartHomeBuddy",
            "categories": [
              "Network",
              "System"
            ],
            "description": "Identify vulnerabilities in your network from IoT devices.",
            "genericName": "Network Device Identifier",
            "homepage": "https://github.com/jo-jstrm/SmartHomeBuddy",
            "icon": "media/app-icons/background.png",
            "maintainer": "Tobias Becher and Johannes Jestram",
            "name": "smarthomebuddy",
            "productName": "SmartHomeBuddy"
          }
        }
      ],
      "plugins": [
        [
          "@electron-forge/plugin-webpack",
          {
            "mainConfig": "./webpack.main.config.js",
            "renderer": {
              "config": "./webpack.renderer.config.js",
              "entryPoints": [
                {
                  "html": "./src/static/index.html",
                  "js": "./src/renderer.ts",
                  "name": "main_window"
                }
              ],
              "nodeIntegration": true
            }
          }
        ]
      ]
    }
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.64",
    "@electron-forge/maker-deb": "^6.0.0-beta.64",
    "@electron-forge/maker-flatpak": "^6.0.0-beta.64",
    "@electron-forge/maker-rpm": "^6.0.0-beta.64",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.64",
    "@electron-forge/maker-zip": "^6.0.0-beta.64",
    "@electron-forge/plugin-webpack": "^6.0.0-beta.64",
    "@types/google-protobuf": "^3.15.6",
    "@types/node": "^18.0.6",
    "@types/react": "^18.0.14",
    "@types/react-dom": "^18.0.5",
    "@typescript-eslint/eslint-plugin": "^5.29.0",
    "@typescript-eslint/parser": "^5.29.0",
    "@vercel/webpack-asset-relocator-loader": "^1.7.0",
    "aws-sdk": "^2.1180.0",
    "css-loader": "^6.7.1",
    "electron": "19.0.6",
    "electron-builder": "^23.1.0",
    "eslint": "^8.18.0",
    "eslint-plugin-import": "^2.26.0",
    "fork-ts-checker-webpack-plugin": "^7.2.11",
    "grpc-tools": "^1.11.2",
    "mock-aws-s3": "^4.0.2",
    "nock": "^13.2.9",
    "node-loader": "^2.0.0",
    "sass": "^1.53.0",
    "sass-loader": "^13.0.2",
    "style-loader": "^3.3.1",
    "ts-loader": "^9.3.1",
    "ts-protoc-gen": "^0.15.0",
    "typescript": "~4.5.4"
  },
  "dependencies": {
    "@emotion/react": "^11.9.3",
    "@emotion/styled": "^11.9.3",
    "@grpc/grpc-js": "^1.6.8",
    "@mui/icons-material": "^5.8.4",
    "@mui/material": "^5.8.7",
    "electron-squirrel-startup": "^1.0.0",
    "google-protobuf": "^3.20.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router": "^6.3.0",
    "react-router-dom": "^6.3.0",
    "recharts": "^2.1.12"
  }
}
